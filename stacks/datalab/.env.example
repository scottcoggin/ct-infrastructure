# DataLab Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YourSecurePasswordHere123!
POSTGRES_PORT=5432

# Database names (created by init-db.sql)
MAGE_DATABASE=mage_db
SUPERSET_DATABASE=superset_db
DATAMART_DATABASE=datamart

# =============================================================================
# Mage Configuration
# =============================================================================
MAGE_PROJECT_NAME=datalab
MAGE_PORT=6789

# =============================================================================
# Superset Configuration
# =============================================================================
SUPERSET_PORT=8088

# Generate a strong secret key using: openssl rand -base64 42
SUPERSET_SECRET_KEY=CHANGE_ME_TO_A_COMPLEX_RANDOM_SECRET_KEY_USE_OPENSSL

# Admin user credentials (created on first startup)
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin
SUPERSET_ADMIN_FIRSTNAME=Admin
SUPERSET_ADMIN_LASTNAME=User
SUPERSET_ADMIN_EMAIL=admin@datalab.local

# Load example data (yes/no)
SUPERSET_LOAD_EXAMPLES=no

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# Cube.js Configuration (Semantic Layer)
# =============================================================================
CUBEJS_PORT=4000

# Generate a strong secret key using: openssl rand -base64 42
CUBEJS_API_SECRET=CHANGE_ME_TO_A_COMPLEX_RANDOM_SECRET_KEY_USE_OPENSSL

# Development mode (set to false in production)
CUBEJS_DEV_MODE=true

# =============================================================================
# Traefik / Domain Configuration
# =============================================================================
# Domain names for reverse proxy routing (requires local DNS setup)
MAGE_DOMAIN=mage.homenet24.lan
SUPERSET_DOMAIN=superset.homenet24.lan
CUBEJS_DOMAIN=cube.homenet24.lan

# =============================================================================
# Notes
# =============================================================================
# 1. DO NOT commit the .env file to version control
# 2. Generate secure secret keys using: openssl rand -base64 42
#    - SUPERSET_SECRET_KEY
#    - CUBEJS_API_SECRET
# 3. Change default passwords in production
# 4. The init-db.sql script will create the following:
#    - mage_db: Mage metadata
#    - superset_db: Superset metadata
#    - datamart: Data warehouse with bronze/silver/gold schemas
# 5. Cube.js schema files are in ./cube/model/ directory
